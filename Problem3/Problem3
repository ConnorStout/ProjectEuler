import time
def treeBuilder(n, theRange, prev, maximum, startTime):
    for x in theRange:

        if(n%x == 0):
            check = True
            for y in prev:
                if(x%y == 0):
                    check = False
            if check == True:
                prev.append(x)
                total = 1
                for z in prev:
                    total = total * z
                if(maximum/total<x):
                    print("The largest prime factor is: " + str(max(prev)))
                    print(time.time() - startTime)
                    exit(0)



                treeBuilder(n/x, range(x, maximum+1), prev, maximum, startTime)
                return
    check = True
    for y in prev:
        if (x % y == 0):
            check = False
    if check == True:
        prev.append(x)
    print("The largest prime factor is: " + str(max(prev)))


def getTheFactors(n):

    startTime = time.time()
    treeBuilder(n,range(2,n+1), [], n, startTime)

getTheFactors(600851475143)